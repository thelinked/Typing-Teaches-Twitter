             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d">
    <WrapPanel Orientation="Horizontal" HorizontalAlignment="Left">
        <RichTextBox x:Name="Tweet" VerticalAlignment="Center" Width="850" HorizontalAlignment="Left"></RichTextBox>
<!--        <Label x:Name="Tweet" Content="Button" VerticalAlignment="Center" Width="850" HorizontalAlignment="Left"/>-->
        <TextBox x:Name="Guess" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Center" Width="120"/>
        <Image x:Name="Result" VerticalAlignment="Top" Width="56" Source="question.png"/>
    </WrapPanel>
</UserControl>
